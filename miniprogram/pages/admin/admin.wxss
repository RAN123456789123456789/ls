/* pages/admin/admin.wxss */
page {
  height: 100vh;
  background: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 40rpx 30rpx;
  background: #f5f5f5;
}

.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0 80rpx;
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.admin-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.admin-title {
  font-size: 44rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  letter-spacing: -0.5rpx;
}

.admin-desc {
  font-size: 28rpx;
  color: #8e8e93;
}

.menu-section {
  flex: 1;
  margin-bottom: 40rpx;
}

.menu-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
}

.menu-card:active {
  transform: scale(0.98);
  background: #f9f9f9;
}

.menu-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
}

.menu-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
  letter-spacing: -0.5rpx;
}

.menu-desc {
  font-size: 26rpx;
  color: #8e8e93;
}

.menu-arrow {
  font-size: 48rpx;
  color: #c7c7cc;
  margin-left: 20rpx;
}

.logout-section {
  padding: 20rpx 0;
}

.logout-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: #ffffff;
  color: #ff3b30;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: 2rpx solid #ffebea;
  box-shadow: 0 2rpx 12rpx rgba(255, 59, 48, 0.1);
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  background: #fff5f5;
}

