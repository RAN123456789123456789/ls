page {
  background-color: #ffffff;
}

.container {
  height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  margin: 0;
  padding: 0;
}

.tab-bar {
  display: flex;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e5ea;
  padding: 0;
  margin: 0;
  position: relative;
  z-index: 100;
  width: 100%;
  height: 88rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 30rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
  height: 100%;
}

.tab-item.active {
  color: #1a1a1a;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: #1a1a1a;
  border-radius: 3rpx 3rpx 0 0;
}

.request-list {
  flex: 1;
  padding: 24rpx 30rpx;
  overflow-y: auto;
}

.loading,
.empty {
  text-align: center;
  padding: 200rpx 0;
  color: #999;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading::before,
.empty::before {
  content: '';
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.empty::before {
  content: 'ðŸ“‹';
  font-size: 120rpx;
  opacity: 0.3;
}

.request-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.request-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.request-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.book-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.status-badge {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.status-pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.status-approved {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-rejected {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.status-borrowed {
  background-color: #e6f4ff;
  color: #1890ff;
}

.status-returned {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-completed {
  background-color: #e6f7ff;
  color: #1890ff;
}

.request-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #999;
  width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  color: #333;
  flex: 1;
}

.request-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  height: 68rpx;
  line-height: 68rpx;
  padding: 0 36rpx;
  border-radius: 34rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s;
}

.action-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.action-btn::after {
  border: none;
}

.approve-btn {
  background: #ffffff;
  color: #1a1a1a;
  border: 2rpx solid #e5e5ea;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.approve-btn:active {
  background: #f9f9f9;
}

.reject-btn {
  background: #ffffff;
  color: #1a1a1a;
  border: 2rpx solid #e5e5ea;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.reject-btn:active {
  background: #f9f9f9;
}

.borrow-btn {
  background: #ffffff;
  color: #1a1a1a;
  border: 2rpx solid #e5e5ea;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.borrow-btn:active {
  background: #f9f9f9;
}

.return-btn {
  background: #ffffff;
  color: #1a1a1a;
  border: 2rpx solid #e5e5ea;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.return-btn:active {
  background: #f9f9f9;
}

.detail-btn {
  background: #ffffff;
  color: #1a1a1a;
  border: 2rpx solid #e5e5ea;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.detail-btn:active {
  background: #f9f9f9;
}

