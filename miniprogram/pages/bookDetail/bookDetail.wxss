/* pages/bookDetail/bookDetail.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.loading {
  text-align: center;
  padding: 200rpx 0;
  color: #999;
  font-size: 28rpx;
}

.book-detail {
  padding-bottom: 160rpx;
}

.book-header {
  background: #fff;
  padding: 40rpx 30rpx;
  display: flex;
  margin-bottom: 20rpx;
}

.book-cover {
  width: 200rpx;
  height: 280rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
  margin-right: 30rpx;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.book-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.book-author,
.book-isbn {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.book-count {
  margin-top: auto;
  display: flex;
  align-items: center;
}

.count-label {
  font-size: 28rpx;
  color: #666;
}

.count-value {
  font-size: 32rpx;
  font-weight: 600;
  margin-left: 12rpx;
}

.count-value.available {
  color: #52c41a;
}

.count-value.unavailable {
  color: #ff4d4f;
}

.book-description {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.desc-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.desc-content {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.borrow-settings {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.settings-title {
  font-size: 30rpx;
  color: #333;
}

.picker {
  display: flex;
  align-items: center;
  color: #667eea;
  font-size: 28rpx;
}

.picker-arrow {
  margin-left: 12rpx;
  font-size: 32rpx;
  color: #999;
}

.borrow-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.borrow-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ffffff;
  color: #1a1a1a;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: 1rpx solid #e0e0e0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.borrow-btn.disabled {
  background: #d9d9d9;
  color: #999;
}

.borrow-btn .btn-icon,
.submit-btn .btn-icon,
.auth-btn .btn-icon,
.batch-auth-btn .btn-icon,
.return-btn .btn-icon,
.login-btn .btn-icon,
.edit-btn .btn-icon {
  width: 32rpx;
  height: 32rpx;
}

.borrow-btn .btn-text,
.submit-btn .btn-text,
.auth-btn .btn-text,
.batch-auth-btn .btn-text,
.return-btn .btn-text,
.login-btn .btn-text,
.edit-btn .btn-text {
  font-size: inherit;
  color: inherit;
}

.borrow-btn::after {
  border: none;
}


