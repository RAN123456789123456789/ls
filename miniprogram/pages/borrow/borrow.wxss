/* borrow.wxss */
page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 0;
  position: relative;
  overflow: visible;
}

/* 顶部功能栏 */
.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e5ea;
  z-index: 100;
  padding-top: env(safe-area-inset-top);
}

.top-bar-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  height: 80rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.top-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  min-width: 80rpx;
}

.action-item:active {
  background-color: #f5f5f5;
}

.action-icon {
  font-size: 40rpx;
  line-height: 1;
  margin-bottom: 4rpx;
}

.action-text {
  font-size: 20rpx;
  color: #666;
  line-height: 1;
}

.button-container {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: calc(80rpx + env(safe-area-inset-top));
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  position: relative;
  z-index: 10;
}

.borrow-btn,
.return-btn {
  flex: 1;
  height: 200rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  border: none;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin: 0 20rpx;
  position: relative;
  z-index: 10;
  pointer-events: auto;
}

.borrow-btn:active,
.borrow-btn-hover {
  background-color: #f9f9f9;
}

.return-btn:active,
.return-btn-hover {
  background-color: #f9f9f9;
}

