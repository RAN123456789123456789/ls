/* pages/borrowForm/borrowForm.wxss */
page {
  height: 100vh;
  background-color: #ffffff;
}

.container {
  height: 100vh;
  padding-bottom: 160rpx;
  margin: 0;
}

.form-content {
  padding: 0 30rpx 30rpx;
  margin-top: 0;
}

.form-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-section:first-child {
  margin-top: 0;
  border-radius: 0 0 16rpx 16rpx;
}

/* 授权弹窗样式 */
.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.auth-modal-content {
  width: 640rpx;
}

.auth-tip {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.auth-item-modal {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.auth-item-modal:last-child {
  border-bottom: none;
}

.auth-item-modal.auth-success {
  padding: 20rpx 0;
}

.auth-label-modal {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.auth-status-text {
  font-size: 26rpx;
  color: #3cc51f;
}

.auth-buttons-modal {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.auth-btn-modal {
  min-width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #3cc51f;
  color: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
  padding: 0 24rpx;
  margin: 0;
}

.auth-btn-modal.manual-btn-modal {
  background: #1890ff;
}

.auth-btn-modal::after {
  border: none;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.auth-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.auth-item:last-child {
  border-bottom: none;
}

.auth-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.auth-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.auth-status {
  font-size: 24rpx;
  color: #999;
}

.auth-status.authorized {
  color: #3cc51f;
}

.auth-buttons {
  display: flex;
  align-items: center;
}

.auth-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #3cc51f;
  color: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
  padding: 0;
  margin: 0;
}

.auth-btn.manual-btn {
  background: #1890ff;
  margin-left: 20rpx;
}

.auth-btn::after {
  border: none;
}

.auth-value {
  font-size: 28rpx;
  color: #333;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-body {
  padding: 40rpx 30rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border: none;
  border-radius: 0;
  padding: 0;
  margin: 0;
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel-btn {
  background: #fff;
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.confirm-btn {
  background: #3cc51f;
  color: #fff;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  color: #333;
  font-size: 28rpx;
}

.picker-arrow {
  font-size: 32rpx;
  color: #999;
}

.submit-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ffffff;
  color: #1a1a1a;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: 2rpx solid #e5e5ea;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  background: #e5e5ea;
  color: #8e8e93;
  border-color: #e5e5ea;
}
