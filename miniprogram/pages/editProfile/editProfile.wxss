/* editProfile.wxss */
page {
  height: 100vh;
  background: #f5f5f5;
  padding: 0;
  margin: 0;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
  padding: 0;
  margin: 0;
}

.content {
  flex: 1;
  padding: 0;
  padding-bottom: 180rpx;
  margin: 0;
}

/* 区块 */
.section {
  background: #ffffff;
  margin-top: 20rpx;
  padding: 40rpx 20rpx;
  padding-bottom: 60rpx;
}

.section:first-child {
  margin-top: 0;
  padding-top: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 30rpx;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}

.avatar-btn {
  position: relative;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 4rpx solid #e0e0e0;
  display: block;
  overflow: hidden;
  object-fit: cover;
}

.avatar-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.avatar-btn:active .avatar-mask {
  opacity: 1;
}

.avatar-hint {
  color: #ffffff;
  font-size: 26rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 40rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.label-required {
  color: #ff4444;
  font-size: 28rpx;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-sizing: border-box;
}

.form-input:focus {
  background: #ffffff;
  border-color: #3cc51f;
}

.form-hint {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-top: 12rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.save-btn::after {
  border: none;
}

.save-btn[disabled] {
  background: #cccccc;
  box-shadow: none;
}

.save-btn-text {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
}

