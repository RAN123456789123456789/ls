/* pages/login/login.wxss */
page {
  height: 100vh;
  background: #ffffff;
  padding: 0;
  margin: 0;
}

.container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 0 40rpx;
  padding-top: 0;
  background: #ffffff;
  margin: 0;
}

.login-card {
  width: 100%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 80rpx 60rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.login-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  letter-spacing: -0.5rpx;
}

.login-desc {
  font-size: 26rpx;
  color: #8e8e93;
}

.form-section {
  display: flex;
  flex-direction: column;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #1a1a1a;
  box-sizing: border-box;
  border: 1rpx solid #e5e5ea;
}

.password-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.password-wrapper .input-field {
  padding-right: 100rpx;
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  cursor: pointer;
}

.toggle-icon {
  font-size: 36rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ffffff;
  color: #1a1a1a;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: 2rpx solid #e5e5ea;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.login-btn::after {
  border: none;
}

.login-btn[disabled] {
  background: #e5e5ea;
  color: #8e8e93;
  border-color: #e5e5ea;
}

