/* mine.wxss */
page {
  height: 100vh;
  background: #ffffff;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #ffffff;
}

/* 未登录状态 */
.login-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  background: #ffffff;
}

.login-card {
  width: 100%;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 100rpx 60rpx 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.login-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.login-title {
  font-size: 38rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  letter-spacing: -0.5rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #8e8e93;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

/* 头像选择区域 */
.avatar-select-section {
  width: 100%;
  margin-bottom: 48rpx;
  display: flex;
  justify-content: center;
}

.avatar-select-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
}

.avatar-select-btn::after {
  border: none;
}

.avatar-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #e0e0e0;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.avatar-hint {
  font-size: 26rpx;
  color: #8e8e93;
}

/* 昵称输入区域 */
.nickname-input-section {
  width: 100%;
  margin-bottom: 48rpx;
}

.nickname-label {
  display: block;
  font-size: 28rpx;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #1a1a1a;
  border: 2rpx solid transparent;
}

.nickname-input:focus {
  background: #ffffff;
  border-color: #667eea;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.login-btn::after {
  border: none;
}

.login-btn[disabled] {
  background: #e5e5ea;
  color: #8e8e93;
  box-shadow: none;
}



/* 已登录状态 */
.user-section {
  flex: 1;
  padding-bottom: 40rpx;
}

.user-card {
  background: #ffffff;
  padding: 30rpx 40rpx 30rpx;
  margin: 0 20rpx 12rpx;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.user-header {
  display: flex;
  align-items: center;
}

.avatar-wrapper {
  position: relative;
  margin-right: 32rpx;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.avatar-edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: #3cc51f;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border: 3rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.nickname {
  font-size: 38rpx;
  font-weight: 600;
  color: #1a1a1a;
  letter-spacing: -0.5rpx;
  margin-right: 16rpx;
}

.edit-name-icon {
  font-size: 28rpx;
  opacity: 0.6;
  padding: 8rpx;
}

.phone-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.user-id {
  font-size: 26rpx;
  color: #8e8e93;
  line-height: 1.4;
}

.user-id-placeholder {
  font-size: 26rpx;
  color: #c7c7cc;
  line-height: 1.4;
}

.phone-setting-btn {
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.phone-setting-btn::after {
  border: none;
}

.phone-setting-icon {
  font-size: 32rpx;
  opacity: 0.6;
  line-height: 1;
}

.phone-setting-text {
  font-size: 26rpx;
  color: #667eea;
  padding: 8rpx 16rpx;
  border: 1rpx solid #667eea;
  border-radius: 8rpx;
  background: rgba(102, 126, 234, 0.05);
}

.phone-setting-btn.manual-btn {
  margin-left: 16rpx;
}

.input-hint {
  font-size: 24rpx;
  color: #8e8e93;
  margin-top: 16rpx;
  display: block;
}

/* 编辑区域 */
.edit-section {
  background: #ffffff;
  margin: 0 20rpx 24rpx;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.edit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #ffffff;
  color: #1a1a1a;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: 1rpx solid #e0e0e0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.edit-btn::after {
  border: none;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
}

.btn-text {
  font-size: 30rpx;
  color: #1a1a1a;
}

/* 操作区域 */
.action-section {
  padding: 0 20rpx;
}

.logout-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: #ffffff;
  color: #ff3b30;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: 2rpx solid #ffebea;
  margin-top: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(255, 59, 48, 0.1);
}

.logout-btn::after {
  border: none;
}

/* 管理员登录按钮 */
.admin-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: #ffffff;
  color: #1a1a1a;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: 2rpx solid #e5e5ea;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.admin-btn::after {
  border: none;
}

/* 管理员登录区域（未登录状态） */
.admin-section {
  padding: 0 20rpx 40rpx;
  background: #ffffff;
}

.admin-divider {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0;
}

.divider-text {
  font-size: 26rpx;
  color: #c7c7cc;
  padding: 0 24rpx;
  position: relative;
}

.divider-text::before,
.divider-text::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 120rpx;
  height: 1rpx;
  background: #e5e5ea;
}

.divider-text::before {
  right: 100%;
  margin-right: 24rpx;
}

.divider-text::after {
  left: 100%;
  margin-left: 24rpx;
}

.admin-btn-outline {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: #ffffff;
  color: #1a1a1a;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: 2rpx solid #e5e5ea;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.admin-btn-outline::after {
  border: none;
}

/* 编辑名称弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 32rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.modal-close {
  font-size: 40rpx;
  color: #8e8e93;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.modal-body {
  padding: 40rpx 32rpx;
}

.name-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #1a1a1a;
  border: 2rpx solid transparent;
}

.name-input:focus {
  background: #ffffff;
  border-color: #667eea;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  border-radius: 0;
  background: #ffffff;
}

.modal-btn::after {
  border: none;
}

.cancel-btn {
  color: #8e8e93;
  border-right: 1rpx solid #f0f0f0;
}

.confirm-btn {
  color: #667eea;
  font-weight: 600;
}
