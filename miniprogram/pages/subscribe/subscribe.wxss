/* pages/subscribe/subscribe.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  color: #fff;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.desc {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.6;
}

.subscribe-list {
  padding: 30rpx 30rpx 0;
}

.subscribe-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.subscribe-item.authorized {
  border: 2rpx solid #52c41a;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.item-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.item-status.authorized {
  background-color: #f6ffed;
  color: #52c41a;
}

.item-status.unauthorized {
  background-color: #fff7e6;
  color: #fa8c16;
}

.item-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.auth-btn {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  background: #ffffff;
  color: #1a1a1a;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
  margin-top: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.auth-btn.disabled {
  background: #d9d9d9;
  color: #999;
}

.auth-btn::after {
  border: none;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.batch-auth-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ffffff;
  color: #1a1a1a;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: 1rpx solid #e0e0e0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.batch-auth-btn::after {
  border: none;
}

.auth-btn .btn-icon,
.batch-auth-btn .btn-icon {
  width: 28rpx;
  height: 28rpx;
}

.auth-btn .btn-text,
.batch-auth-btn .btn-text {
  font-size: inherit;
  color: inherit;
}

.batch-auth-btn[disabled] {
  background: #d9d9d9;
  color: #999;
}

/* 测试区域样式 */
.test-section {
  margin: 30rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.test-header {
  margin-bottom: 24rpx;
}

.test-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.test-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.test-btn {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  background: #667eea;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: none;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.test-btn::after {
  border: none;
}

.test-btn[disabled] {
  background: #d9d9d9;
  color: #999;
}

.test-result {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #e0e0e0;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.result-label {
  color: #666;
}

.result-value {
  color: #333;
  font-weight: 600;
}

.result-value.success {
  color: #52c41a;
}

.result-value.error {
  color: #ff4d4f;
}

.reminder-list {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #e0e0e0;
}

.reminder-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.reminder-item {
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.reminder-info {
  margin-bottom: 12rpx;
}

.reminder-book {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.reminder-date {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.reminder-days {
  display: block;
  font-size: 24rpx;
  color: #52c41a;
  font-weight: 600;
}

.reminder-days.overdue {
  color: #ff4d4f;
}

.reminder-status {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.status-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.status-tag.authorized {
  background: #f6ffed;
  color: #52c41a;
}

.status-tag.unauthorized {
  background: #fff7e6;
  color: #fa8c16;
}

.status-tag.sent {
  background: #e6f7ff;
  color: #1890ff;
}

.status-tag.not-sent {
  background: #f5f5f5;
  color: #999;
}


